{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib":["es5","es6","es2015","es7","es2016","es2017","es2015.promise","dom","scripthost"],
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "allowJs": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules"
  ]
}